<project default="buildsources" name="Check ofbiz License Files">
  <description>
    Check over Apache Ofbiz source files for license headers.
  </description>

  <property name="src-dir" location="../ofbizTrunkFrameworkRat/build"/>
  <property name="version" value="0.12"/>
  <property name="jar"
            location="../apache-rat-${version}.jar"/>

  <target name="buildsources" depends="-taskdef"
    description="runs the tasks over ofbiz svn tree.">
    <tstamp/>
    <echo level="info">
     Timestamp: ${DSTAMP} ${TSTAMP}
    </echo>
    <rat:report xmlns:rat="antlib:org.apache.rat.anttasks"
      format="styled" reportFile="${src-dir}/../rat-output.html">
      <stylesheet>
        <file file="${src-dir}/../../../rat-output.xsl"/>
      </stylesheet>
      <fileset dir="${src-dir}">
      <excludesfile name="${src-dir}/rat-excludes.txt"/>
        <exclude name=".buildbot-sourcedata"/>
      </fileset>
    </rat:report>
  </target>

  <target name="-taskdef">
    <typedef resource="org/apache/rat/anttasks/antlib.xml"
             uri="antlib:org.apache.rat.anttasks">
      <classpath>
        <fileset dir=".">
           <include name="**/apache-rat*.jar"/>
           <include name="**/commons-*.jar"/>
        </fileset>
      </classpath>
    </typedef>
  </target>
</project>
